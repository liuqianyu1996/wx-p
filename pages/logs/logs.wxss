page {
  font-size: 34rpx;
}
.search-bar {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#search-input {
  height: 100%;
  width: 90%;
  text-indent: 2em;
}

.input-view {
  width: 500rpx;
  height: 100rpx;
  border: 5px solid cornflowerblue;
  border-radius: 30px;
  position: relative;
}
.search-icon {
  display: inline-block;
  width: 10%;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -25rpx;

}
.search-icon image {
  width: 100%;
  height: 60rpx;
}
